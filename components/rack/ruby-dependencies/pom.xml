<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
    http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.torquebox</groupId>
    <artifactId>torquebox-parent</artifactId>
    <version>1.0.0.Beta23</version>
    <relativePath>../../../parent/</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.torquebox</groupId>
  <artifactId>torquebox-rack-ruby-dependencies</artifactId>
  <packaging>pom</packaging>
  <name>TorqueBox Rack Ruby Dependencies</name>
  <description></description>

  <modules>
    <module>rack</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>de.saumya.mojo</groupId>
          <artifactId>gem-maven-plugin</artifactId>
          <executions>
            <execution>
              <id>install-gem-dependencies</id>
              <phase>compile</phase>
              <goals>
                <goal>initialize</goal>
              </goals>
              <configuration>
                <gemHome>${project.basedir}/../../target/rubygems</gemHome>
                <gemPath>${project.basedir}/../../target/rubygems</gemPath>
                <fork>true</fork>
                <inherit>true</inherit>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
