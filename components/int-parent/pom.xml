<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.torquebox</groupId>
    <artifactId>torquebox-component-parent</artifactId>
    <version>1.0.0.Beta23</version>
    <relativePath>../component-parent/pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.torquebox</groupId>
  <artifactId>torquebox-int-parent</artifactId>
  <packaging>pom</packaging>
  <name>TorqueBox Integration Parent</name>
  <description></description>

  <dependencies>
    <dependency>
      <groupId>org.jboss.scanning</groupId>
      <artifactId>scanning-plugins</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  
  <build> 
    <pluginManagement> 
      <plugins> 
        <plugin> 
          <artifactId>maven-assembly-plugin</artifactId> 
          <dependencies> 
            <dependency> 
              <groupId>org.torquebox</groupId> 
              <artifactId>torquebox-deployer-support</artifactId> 
              <version>${project.version}</version>
            </dependency> 
          </dependencies> 
          <executions>
            <execution>
              <id>assemble-deployer</id>
              <inherited>true</inherited>
              <phase>package</phase>
              <goals>
                <goal>single</goal>
              </goals>
              <configuration> 
                <descriptorRefs> 
                  <descriptorRef>deployer</descriptorRef> 
                </descriptorRefs>
              </configuration> 
            </execution>
          </executions>
        </plugin> 
      </plugins> 
    </pluginManagement> 
  </build> 

  <profiles>
    <profile>
      <id>assemblage-present</id>
      <activation>
        <file>
          <exists>./../../../assemblage/assembly/target/stage/</exists>
        </file>
      </activation>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>de.saumya.mojo</groupId>
              <artifactId>gem-maven-plugin</artifactId>
              <executions>
                <execution>
                  <id>install-dependency-gems</id>
                  <phase>install</phase>
                  <inherited>true</inherited>
                  <goals>
                    <goal>initialize</goal>
                  </goals>
                  <configuration>
                    <useTransitiveDependencies>true</useTransitiveDependencies>
                    <gemPath>${project.basedir}/../../../assemblage/assembly/target/stage/torquebox-${project.version}/jruby/lib/ruby/gems/1.8</gemPath>
                    <gemHome>${project.basedir}/../../../assemblage/assembly/target/stage/torquebox-${project.version}/jruby/lib/ruby/gems/1.8</gemHome>
                  </configuration>
                </execution>
              </executions>
            </plugin>
            <plugin>
              <artifactId>maven-dependency-plugin</artifactId>
              <executions>
                <execution>
                  <id>install-deployer</id>
                  <phase>install</phase>
                  <inherited>true</inherited>
                  <goals>
                    <goal>copy</goal>
                  </goals>
                  <configuration>
                    <artifactItems>
                      <artifactItem>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>${project.artifactId}</artifactId>
                        <classifier>deployer</classifier>
                        <version>${project.version}</version>
                        <type>jar</type>
                        <outputDirectory>${project.basedir}/../../../assemblage/assembly/target/stage/torquebox-${project.version}/jboss/server/default/deployers/torquebox.deployer/</outputDirectory>
                        <overWrite>true</overWrite>
                      </artifactItem>
                    </artifactItems>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
  </profiles>


</project>
