<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.torquebox</groupId>
    <artifactId>torquebox-parent</artifactId>
    <version>1.0.0.Beta19</version>
    <relativePath>../../parent/pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.torquebox</groupId>
  <artifactId>torquebox-container-parent</artifactId>
  <packaging>pom</packaging>
  <name>TorqueBox Container Parent</name>
  <description></description>


  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>de.saumya.mojo</groupId>
          <artifactId>gem-maven-plugin</artifactId>
          <executions>
            <execution>
              <id>default-initialize</id>
              <configuration>
                <gemHome>${project.parent.build.directory}/rubygems</gemHome>
                <gemPath>${project.parent.build.directory}/rubygems</gemPath>
                <fork>true</fork>
              </configuration>
            </execution>
              <execution>
              <id>default-package</id>
              <configuration>
                <includeDependencies>true</includeDependencies>
              </configuration>
            </execution>
            <execution>
              <id>default-install</id>
              <goals>
                <goal>install</goal>
              </goals>
              <configuration>
                <gemHome>${project.parent.build.directory}/rubygems</gemHome>
                <gemPath>${project.parent.build.directory}/rubygems</gemPath>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>de.saumya.mojo</groupId>
          <artifactId>rspec-maven-plugin</artifactId>
          <executions>
            <execution>
              <id>run-specs</id>
              <phase>test</phase>
              <goals>
                <goal>test</goal>
              </goals>
              <configuration>
                <gemHome>${project.parent.build.directory}/rubygems</gemHome>
                <gemPath>${project.parent.build.directory}/rubygems</gemPath>
                <fork>true</fork>
                <verbose>true</verbose>
                <systemProperties>
                  <property>
                    <name>log4j.configuration</name>
                    <value>test-log4j.xml</value>
                  </property>
                </systemProperties>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
