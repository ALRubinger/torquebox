      <outputDirectory>gems/</outputDirectory>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <includes>
        <include>*:*:gem</include>
      </includes>
    </dependencySet>
-->
  </dependencySets>
</assembly>
