<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.torquebox</groupId>
    <artifactId>torquebox-parent</artifactId>
    <version>1.0.0.CR1-SNAPSHOT</version>
    <relativePath>../../parent/</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.torquebox</groupId>
  <artifactId>torquebox-assembly</artifactId>
  <packaging>pom</packaging>
  <name>TorqueBox Assembly</name>
  <description></description>

  <properties>
    <install.docs>false</install.docs>
    <stage.dir>${project.build.directory}/stage/torquebox-${project.version}</stage.dir>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-assemblage-pre-assembly</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.jruby</groupId>
      <artifactId>jruby-bin</artifactId>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.jboss.jbossas</groupId>
      <artifactId>jboss-as-distribution</artifactId>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>rubyzip</artifactId>
      <type>gem</type>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-base-int</artifactId>
      <classifier>deployer</classifier>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-interp-int</artifactId>
      <classifier>deployer</classifier>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-rack-int</artifactId>
      <classifier>deployer</classifier>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-rails-int</artifactId>
      <classifier>deployer</classifier>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-jobs-int</artifactId>
      <classifier>deployer</classifier>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-messaging-int</artifactId>
      <classifier>deployer</classifier>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>


    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>vfs</artifactId>
      <type>gem</type>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-capistrano</artifactId>
      <type>gem</type>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-container-foundation</artifactId>
      <type>gem</type>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-naming-container</artifactId>
      <type>gem</type>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-messaging-container</artifactId>
      <type>gem</type>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-naming-client</artifactId>
      <type>gem</type>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>torquebox-messaging-client</artifactId>
      <type>gem</type>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>rake-support</artifactId>
      <type>gem</type>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.torquebox</groupId>
      <artifactId>rake-support</artifactId>
      <type>template.rb</type>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>activerecord-jdbc-adapter</artifactId>
      <classifier>java</classifier>
      <type>gem</type>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>activerecord-jdbcmysql-adapter</artifactId>
      <classifier>java</classifier>
      <type>gem</type>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>activerecord-jdbcpostgresql-adapter</artifactId>
      <classifier>java</classifier>
      <type>gem</type>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>activerecord-jdbcsqlite3-adapter</artifactId>
      <classifier>java</classifier>
      <type>gem</type>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>jdbc-mysql</artifactId>
      <classifier>java</classifier>
      <type>gem</type>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>jdbc-postgres</artifactId>
      <classifier>java</classifier>
      <type>gem</type>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>jdbc-sqlite3</artifactId>
      <classifier>java</classifier>
      <type>gem</type>
    </dependency>

  </dependencies>

  <profiles>
    <profile>
      <id>dist</id>
      <properties>
        <install.docs>true</install.docs>
      </properties>
    </profile>
  </profiles>

  <build>
    <plugins> 
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>stage-jboss</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems> 
                <artifactItem>
                  <groupId>org.jboss.jbossas</groupId>
                  <artifactId>jboss-as-distribution</artifactId>
                  <type>zip</type>
                  <version>${version.jbossas}</version>
                </artifactItem>
              </artifactItems> 
              <outputDirectory>${stage.dir}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>stage-jruby</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.jruby</groupId>
                  <artifactId>jruby-bin</artifactId>
                  <type>zip</type>
                  <version>${version.jruby}</version>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${stage.dir}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>install-deployers-default-profile</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>org.torquebox</includeGroupIds> 
              <includeTypes>jar</includeTypes>
              <includeClassifiers>deployer</includeClassifiers> 
              <includeScope>provided</includeScope>
              <excludeTransitive>true</excludeTransitive>
              <outputDirectory>${stage.dir}/jboss/server/default/deployers/torquebox.deployer</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
          <execution>
            <id>install-deployers-standard-profile</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>org.torquebox</includeGroupIds>
              <includeTypes>jar</includeTypes>
              <includeClassifiers>deployer</includeClassifiers>
              <includeScope>provided</includeScope>
              <excludeTransitive>true</excludeTransitive>
              <outputDirectory>${stage.dir}/jboss/server/standard/deployers/torquebox.deployer</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
          <execution>
            <id>install-deployers-all-profile</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>org.torquebox</includeGroupIds>
              <includeTypes>jar</includeTypes>
              <includeClassifiers>deployer</includeClassifiers>
              <includeScope>provided</includeScope>
              <excludeTransitive>true</excludeTransitive>
              <outputDirectory>${stage.dir}/jboss/server/all/deployers/torquebox.deployer</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
          <execution>
            <id>install-deployers-osgi-profile</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>org.torquebox</includeGroupIds>
              <includeTypes>jar</includeTypes>
              <includeClassifiers>deployer</includeClassifiers>
              <includeScope>provided</includeScope>
              <excludeTransitive>true</excludeTransitive>
              <outputDirectory>${stage.dir}/jboss/server/osgi/deployers/torquebox.deployer</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
          <execution>
            <id>install-deployers-jbossweb-standalone-profile</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>org.torquebox</includeGroupIds>
              <includeTypes>jar</includeTypes>
              <includeClassifiers>deployer</includeClassifiers>
              <includeScope>provided</includeScope>
              <excludeTransitive>true</excludeTransitive>
              <outputDirectory>${stage.dir}/jboss/server/jbossweb-standalone/deployers/torquebox.deployer</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>

          <execution>
            <id>install-rails-template</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>org.torquebox</includeGroupIds>
              <includeTypes>template.rb</includeTypes>
              <outputDirectory>${stage.dir}/share/rails</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>

          <execution>
            <id>install-jruby-vfs</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <stripVersion>true</stripVersion>
              <outputDirectory>${stage.dir}/jruby/lib</outputDirectory>
              <artifactItems>
                <artifactItem>
                  <groupId>org.jboss</groupId>
                  <artifactId>jboss-vfs</artifactId>
                </artifactItem>
                <artifactItem>
                  <groupId>org.jboss.logging</groupId>
                  <artifactId>jboss-logging</artifactId>
                </artifactItem>
                <artifactItem>
                  <groupId>log4j</groupId>
                  <artifactId>log4j</artifactId>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>rename-packages</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <move file="${stage.dir}/jboss-${version.jbossas}" tofile="${stage.dir}/jboss" failonerror="false"/>
                <move file="${stage.dir}/jruby-${version.jruby}" tofile="${stage.dir}/jruby" failonerror="false"/>
              </tasks>
            </configuration>
          </execution>
          <execution>
            <id>remove-jboss-ROOT.war</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <delete dir="${stage.dir}/jboss/server/default/deploy/ROOT.war" failonerror="false"/>
                <delete dir="${stage.dir}/jboss/server/standard/deploy/ROOT.war" failonerror="false"/>
                <delete dir="${stage.dir}/jboss/server/all/deploy/ROOT.war" failonerror="false"/>
                <delete dir="${stage.dir}/jboss/server/osgi/deploy/ROOT.war" failonerror="false"/>
                <delete dir="${stage.dir}/jboss/server/jbossweb-standalone/deploy/ROOT.war" failonerror="false"/>
              </tasks>
            </configuration>
          </execution>
          <execution>
            <id>chmod-bin</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <chmod perm="ugo+x">
                  <fileset dir="${stage.dir}/jboss/bin">
                    <include name="*.sh"/>
                  </fileset>
                  <fileset dir="${stage.dir}/jruby/bin">
                    <include name="gem"/>
                    <include name="jruby"/>
                    <include name="jrubyc"/>
                    <include name="jrubyd"/>
                    <include name="jirb"/>
                    <include name="rdoc"/>
                    <include name="ri"/>
                    <include name="rdebug"/>
                  </fileset>
                </chmod>
              </tasks>
            </configuration>
          </execution>
          <execution>
            <id>rename-rails-template</id>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <move file="${stage.dir}/share/rails/rake-support.template.rb" tofile="${stage.dir}/share/rails/template.rb"/>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>gem-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>install-jruby-home-gems</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>initialize</goal>
            </goals>
            <configuration>
              <binDirectory>${stage.dir}/jruby/bin</binDirectory>
              <gemPath>${stage.dir}/jruby/lib/ruby/gems/1.8</gemPath>
              <gemHome>${stage.dir}/jruby/lib/ruby/gems/1.8</gemHome>
              <useTransitiveDependencies>true</useTransitiveDependencies>
              <installRDoc>${install.docs}</installRDoc>
              <installRI>${install.docs}</installRI>
              <fork>true</fork>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
