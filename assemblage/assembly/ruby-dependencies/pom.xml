<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
    http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.torquebox</groupId>
    <artifactId>torquebox-parent</artifactId>
    <version>1.0.0.Beta22-SNAPSHOT</version>
    <relativePath>../../../parent/</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.torquebox</groupId>
  <artifactId>torquebox-assembly-ruby-dependencies</artifactId>
  <packaging>pom</packaging>
  <name>TorqueBox Assembly Ruby Dependencies</name>
  <description></description>

  <modules>
    <module>rack</module>
    <module>rails2</module>
    <module>rails3</module>
  </modules>

  <properties>
    <stage.dir>${project.basedir}/../../target/stage/torquebox-${project.version}</stage.dir>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>de.saumya.mojo</groupId>
          <artifactId>gem-maven-plugin</artifactId>
          <executions>
            <execution>
              <id>install-assembly-gem-dependencies</id>
              <phase>none</phase>
              <goals>
                <goal>initialize</goal>
              </goals>
              <configuration>
                <gemPath>${stage.dir}/jruby/lib/ruby/gems/1.8</gemPath>
                <gemHome>${stage.dir}/jruby/lib/ruby/gems/1.8</gemHome>
                <fork>true</fork>
                <inherit>true</inherit>
                <gemInitializeArgs>-f --bindir ${stage.dir}/jruby/bin</gemInitializeArgs>
                <useTransitiveDependencies>true</useTransitiveDependencies>
                <installRDoc>${install.docs}</installRDoc>
                <installRI>${install.docs}</installRI>
                <fork>true</fork>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
