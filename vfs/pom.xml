    <plugins> 
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>install-vfs-jars</id>
            <phase>install</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <stripVersion>true</stripVersion>
              <outputDirectory>${env.JRUBY_HOME}/lib</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <!--<includeArtifactIds>org.jboss.jboss-vfs,org.jboss.logging.jboss-logging</includeArtifactIds>-->
              <includeArtifactIds>jboss-vfs,jboss-logging</includeArtifactIds>
              <!--<includeArtifactIds>org.jboss.logging.jboss-logging</includeArtifactIds>-->
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
